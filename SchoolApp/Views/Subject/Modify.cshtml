@model SchoolApp.Web.Models.SubjectViewModel

@{
    ViewData["Title"] = "Учителя";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .container{
        margin-top:0em;
    }
</style>
<form method="post" action="/api/subject/Modify">
    <div class="form-group">
        <div class="Table">
            <div class="Row">
                <div class="Cell">
                    <label>Графа</label>
                </div>
                <div class="Cell">
                    <label>Значение</label>
                </div>
            </div>
            <div class="Row">
                <div class="Cell">
                    <label>Наименование</label>
                </div>
                <div class="Cell">
                    <input required name="Subject" value="@Model.Name">
                </div>
            </div>
        </div>
        <input type="hidden" name="Id" class="form-control" value=@Model.Id />
        <input type="submit" value="Изменить" class="btn btn-default" />
    </div>
</form>


